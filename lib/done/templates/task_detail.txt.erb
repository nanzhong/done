ID:   <%= set_color(task.id, color_for_task(task)) %>
Name: <%= set_color(task.name, color_for_task(task)) %>
Type: <%= set_color(name_for_type(task.type), color_for_task(task)) %>
<%- unless task.properties.empty? -%>

<%= set_color('Properties', :yellow) %>
<%- task.properties.each do |k, v| -%>
<%= k %>: <%= v %>
<% end -%>
<% end -%>
<%- unless task.notes.empty? -%>

<%= set_color('Notes', :yellow) %>
<%- task.notes.each do |v| -%>
<%= v %>
<% end -%>
<% end -%>
